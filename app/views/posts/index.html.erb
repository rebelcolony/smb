
<% @posts.each do |post| %>
  <div class="post">
    <div class="media">
      <%= image_tag post.image_url(:thumb).to_s %>
      <%= post.video_code %>
    </div><!-- END .media -->
    <div class="text">
      <h2><%= link_to post.title, post %></h2>
      <%= post.body %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %>
    </div><!-- END .text -->
  </div><!-- END .post -->
<% end %>
<%= link_to 'New Post', new_post_path %>
